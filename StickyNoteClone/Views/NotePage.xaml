<Page
    x:Class="StickyNoteClone.NotePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StickyNoteClone">

    <Grid
        Padding="0 30 0 0"
        Background="{ThemeResource BackgroundNoteBrush}">
        <TextBox
            Style="{StaticResource FocusedTextBoxStyle}"
            BorderBrush="{StaticResource BackgroundNoteBrush}"
            PlaceholderText="Write your note here..."
            TextWrapping="Wrap"
            AcceptsReturn="True"
            Margin="0"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch" />
    </Grid>
</Page>
