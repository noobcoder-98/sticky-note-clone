<Page
    x:Class="StickyNoteClone.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StickyNoteClone"
    xmlns:m="using:StickyNoteClone.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="500"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto"/>
            <RowDefinition
                Height="Auto"/>
            <RowDefinition
                Height="Auto"/>
            <RowDefinition
                Height="*"/>
        </Grid.RowDefinitions>

        <Grid
            BorderBrush="Black"
            BorderThickness="0"
            x:Name="ui_grdAddNote"
            Grid.Row="0">
            <Button
                Width="50"
                Height="50"
                Background="Transparent"
                Foreground="Gray"
                Click="AddNote_Click">
                <SymbolIcon
                    Symbol="Add" />
            </Button>
        </Grid>
        <Grid
            BorderBrush="Black"
            BorderThickness="0"
            x:Name="ui_grdTitle"
            Grid.Row="1">
            <TextBlock
                FontSize="22"
                FontWeight="Bold"
                Margin="12 0 0 0"
                Text="Sticky Notes" />
        </Grid>
        <Grid
            Grid.Row="2"
            Margin=" 12 12 12 0"
            x:Name="ui_grdSearch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*"/>
                <ColumnDefinition
                    Width="Auto"/>
                <ColumnDefinition
                    Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox
                Style="{StaticResource FocusedTextBoxStyle}"
                BorderBrush="{StaticResource BackgroundSearchBox}"
                Background="{StaticResource BackgroundSearchBox}"
                PlaceholderText="Search..."/>
            <Button
                Background="{StaticResource BackgroundSearchBox}"
                Foreground="Gray"
                Grid.Column="1">
                <SymbolIcon
                    Symbol="Find" />
            </Button>
        </Grid>

        <Grid
            Grid.Row="3"
            Margin="12 12 12 12">
            <ListView
                x:Name="ui_lvNotes"
                BorderBrush="Black"
                BorderThickness="1"
                DoubleTapped="ui_lvNotes_DoubleTapped"
                IsItemClickEnabled="True"
                ItemClick="ui_lvNotes_ItemClick"
                HorizontalContentAlignment="Stretch"
                ItemsSource="{x:Bind _viewModel.Notes, Mode=OneWay}">

                <ListView.ItemContainerStyle>
                    <Style
                        TargetType="ListViewItem">
                        <Setter
                            Property="Padding"
                            Value="0" />
                        <Setter
                            Property="Margin"
                            Value="0 0 0 8" />
                        <Setter
                            Property="Background"
                            Value="{StaticResource BackgroundNoteBrush}" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate
                        x:DataType="m:Note">
                        <Grid
                            Padding="10 5 10 5"
                            BorderBrush="Black"
                            BorderThickness="1"
                            >
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="Auto" />
                                <RowDefinition
                                    Height="*" />
                            </Grid.RowDefinitions>
                            <Grid
                                Grid.Row="0"
                                HorizontalAlignment="Right">
                                <TextBlock
                                    x:Name="ui_tbkUpdatedAt"
                                    Foreground="{StaticResource NoteFontBrush}"
                                    Text="{x:Bind UpdatedAt, Mode=OneWay}" />
                            </Grid>

                            <Grid
                                x:Name="ui_grdContent"
                                Grid.Row="1">
                                <TextBlock
                                    x:Name="ui_tbkContent"
                                    Foreground="{StaticResource NoteFontBrush}"
                                    Text="{x:Bind Content}"
                                    TextWrapping="WrapWholeWords" />
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
